<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/playerOneBatu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPemain"
        app:srcCompat="@drawable/batu"

        />

    <ImageView
        android:id="@+id/playerOneKertas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerOneBatu"
        app:srcCompat="@drawable/kertas" />

    <ImageView
        android:id="@+id/playerOneGunting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerOneKertas"
        app:srcCompat="@drawable/gunting" />


    <ImageView
        android:id="@+id/comBatu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCom"
        app:srcCompat="@drawable/batu" />

    <ImageView
        android:id="@+id/comKertas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comBatu"
        app:srcCompat="@drawable/kertas" />

    <ImageView
        android:id="@+id/comGunting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comKertas"
        app:srcCompat="@drawable/gunting" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="63dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/qdbettercomicsansalternates_z8823"
        android:rotation="-15"
        android:text="Kertas"
        android:textAlignment="center"
        android:textColor="@color/orange_kertas"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="159dp"
        android:layout_height="61dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/qdbettercomicsansalternates_z8823"
        android:rotation="-15"
        android:text="Gunting"
        android:textAlignment="center"
        android:textColor="@color/green_gunting"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="124dp"
        android:layout_height="59dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/qdbettercomicsansalternates_z8823"
        android:rotation="-15"
        android:text="Batu"
        android:textAlignment="center"
        android:textColor="@color/purple_batu"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView1" />

    <TextView
        android:id="@+id/tvPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="308dp"
        android:fontFamily="@font/qdbettercomicsansalternates_z8823"
        android:text="Pemain 1"
        android:textColor="@color/lightblue_font"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/qdbettercomicsansalternates_z8823"
        android:text="COM"
        android:textColor="@color/lightblue_font"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vs" />

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/refresh" />


</androidx.constraintlayout.widget.ConstraintLayout>